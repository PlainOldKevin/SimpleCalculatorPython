# Calculator


# Addition function
def addition(n1, n2):
    return n1 + n2

# Subtraction function
def subtraction(n1, n2):
    return n1 - n2

# Multiplication function
def multiplication(n1, n2):
    return n1 * n2

# Division function
def division(n1, n2):
    return n1 / n2

# Dictionary for math functions
operations = {
    "+": addition,
    "-": subtraction,
    "*": multiplication,
    "/": division,
}

# Ask user for input
num1 = int(input("What's the first number? "))

# Print available operations
for key in operations:
    print(key)

# Ask user for desired operation
choice = input("Choose an operation above to run on the two numbers: ")

# Confirm valid choice
while choice != "+" and choice != "-" and choice != "*" and choice != "/":
    print("Invalid Input. Try again.")
    for key in operations:
        print(key)
    choice = input("Choose an operation above to run: ")

# Ask user for second number
num2 = int(input("What's the second number? "))

# Calculate answer
answer = operations[choice](num1, num2)

# Print result for user
print(f"{num1} {choice} {num2} = {answer}")

